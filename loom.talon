# These are set up as globals because Loom probably will not have focus while it's recording video. 

(loom start | loom stop):
    key(alt-cmd-ctrl-e)

(loom pause | loom resume):
    key(alt-shift-p)

loom cancel:
    key(alt-shift-c)

loom draw:
    key(cmd-shift-d)

loom confetti:
    key(ctrl-cmd-c)