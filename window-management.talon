# maximizes window. triggers a better touch tool shortcut
snap max:
    key(ctrl-alt-cmd-up)

snap restore:
    key(ctrl-alt-cmd-down)

snap top left:
    key(fn-ctrl-alt-cmd-/)
snap top right:
    key(fn-ctrl-alt-cmd-up)
snap bottom left:
    key(fn-ctrl-alt-cmd-left)
snap bottom right:
    key(fn-ctrl-alt-cmd-right)